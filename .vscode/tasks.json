{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Makefile",
            "type": "shell",
            "command": "make",

            // Pass 'all' as the build target
            "args": ["all"],

            // Make this the default build command.
            "group": {
                "kind": "build",
                "isDefault": true
            },

            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },

            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },

        {
            "label": "clean",
            "type": "shell",
            "command": "make",

            // Pass 'clean' as the target
            "args": ["clean"],

            // Define group
